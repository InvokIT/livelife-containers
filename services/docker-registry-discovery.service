[Unit]
Description=Announce Private Docker Registry
BindsTo=docker-registry.service
After=docker-registry.service

[Service]
ExecStart=/bin/sh -c "while true; do etcdctl set /services/docker-registry '%H:5000' --ttl 30;sleep 20;done"
ExecStop=/usr/bin/etcdctl rm /services/docker-registry

[X-Fleet]
MachineOf=docker-registry.service